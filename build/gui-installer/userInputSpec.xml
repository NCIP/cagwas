		<variable name="jboss.remoting.port" value="42320"/>
		<variable name="jboss.server.bind.port" value="42190"/>
		<variable name="jboss.server.hostname" value="$HOST_NAME"/>
		<variable name="jboss.server.jndi.port" value="42200"/>
		<variable name="jboss.server.name" value="default"/>
		<variable name="jboss.server.port" value="42210"/>
		<variable name="jboss.server.redirect.port" value="42220"/>
		<variable name="jboss.server.rmi.port" value="42230"/>
		<variable name="jboss.service.rmiobject.port" value="42240"/>
