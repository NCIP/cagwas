		<variable name="ldap.basedn" value=""/>
		<variable name="ldap.url" value=""/>
		<variable name="mail.smtp.server" value="localhost"/>
		<variable name="jboss.java.opts" value="-server -Xms2048m -Xmx2048m -XX:ThreadStackSize=128 -XX:SurvivorRatio=10 -XX:PermSize=128m -XX:MaxPermSize=128m -Dsun.rmi.dgc.client.gcInterval=3600000 -Dsun.rmi.dgc.server.gcInterval=3600000 -Djava.awt.headless=true"/>

	</panel>
	<panel order="3">
		<field type="title" txt="Configure your JBoss application server" bold="true" size="1" />
