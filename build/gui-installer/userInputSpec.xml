		<variable name="jboss.cobraorb.port" value="42280"/>
		<variable name="jboss.ejbinvoker.port" value="42150"/>
		<variable name="jboss.hajndi.port" value="42160"/>
		<variable name="jboss.hajrmi.port" value="42260"/>
		<variable name="jboss.jms.port" value="42170"/>
		<variable name="jboss.jmx-rmi.port" value="42290"/>
		<variable name="jboss.messaging.port" value="42330"/>
